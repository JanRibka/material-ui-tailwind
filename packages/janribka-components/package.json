{
  "name": "@janribka/components",
  "version": "1.0.0",
  "private": false,
  "author": "Jan Ribka",
  "description": "React components library for my projects",
  "license": "MIT",
  "main": "./src/index.ts",
  "keywords": [
    "react",
    "react-components",
    "library",
    "janribka",
    "radix-ui",
    "tailwind",
    "material design"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JanRibka/janribka",
    "directory": "packages/janribka-components"
  },
  "bugs": {
    "url": "https://github.com/JanRibka/janribka/issues"
  },
  "homepage": "https://github.com/JanRibka/janribka#readme",
  "scripts": {
    "build": "pnpm build:modern && pnpm build:node && pnpm build:stable && pnpm build:types && pnpm build:copy-files",
    "build:modern": "node ../../scripts/build.mjs modern",
    "build:node": "node ../../scripts/build.mjs node",
    "build:stable": "node ../../scripts/build.mjs stable",
    "build:copy-files": "node ../../scripts/copyFiles.mjs",
    "build:types": "node ../../scripts/buildTypes.mjs",
    "prebuild": "rimraf build tsconfig.build.tsbuildinfo",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "release": "pnpm version --no-git && pnpm publish --access public",
    "typescript": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.6",
    "@janribka/components": "workspace:^",
    "@janribka/system": "workspace:^",
    "@janribka/types": "workspace:^",
    "@janribka/utils": "workspace:^",
    "csstype": "^3.1.3",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@janribka/internal-babel-macros": "workspace:^",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-transition-group": "^4.4.10",
    "@types/tailwindcss": "^3.1.0",
    "react": "19.0.0-rc-f6cce072-20240723",
    "react-dom": "19.0.0-rc-f6cce072-20240723",
    "rimraf": "^6.0.1",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@types/react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@emotion/react": {
      "optional": true
    },
    "@emotion/styled": {
      "optional": true
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "directory": "build"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
