{
  "name": "@janribka/system",
  "version": "1.0.0-alpha.0",
  "private": false,
  "author": "Jan Ribka",
  "description": "JanRibka System is a set of CSS utilities to help you build custom designs more efficiently. It makes it possible to rapidly lay out custom designs.",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.ts",
  "keywords": [
    "react",
    "react-components",
    "janribka",
    "system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JanRibka/janribka",
    "directory": "packages/janribka-system"
  },
  "bugs": {
    "url": "https://github.com/JanRibka/janribka/issues"
  },
  "homepage": "https://github.com/JanRibka/janribka#readme",
  "scripts": {
    "build": "pnpm build:modern && pnpm build:node && pnpm build:stable && pnpm build:types && pnpm build:copy-files",
    "build:modern": "node ../../scripts/build.mjs modern",
    "build:node": "node ../../scripts/build.mjs node",
    "build:stable": "node ../../scripts/build.mjs stable",
    "build:copy-files": "node ../../scripts/copyFiles.mjs",
    "build:types": "node ../../scripts/buildTypes.mjs",
    "prebuild": "rimraf build tsconfig.build.tsbuildinfo",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "typescript": "tsc -p tsconfig.json",
    "release": "pnpm build && pnpm version --no-git && pnpm publish --access public"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.6",
    "@janribka/private-theming": "workspace:^",
    "@janribka/styled-engine": "workspace:*",
    "@janribka/types": "workspace:^",
    "@janribka/utils": "workspace:^"
  },
  "devDependencies": {
    "@janribka/internal-babel-macros": "workspace:^",
    "@types/react": "^18.3.3",
    "react": "19.0.0-rc-f6cce072-20240723",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "directory": "build"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
