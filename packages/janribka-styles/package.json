{
  "name": "@janribka/styles",
  "version": "0.0.0",
  "private": false,
  "author": "Jan Ribka",
  "description": "Jan Ribka Styles - The legacy tailwind-based styling solution.",
  "license": "MIT",
  "main": "./src/index.ts",
  "keywords": [
    "react",
    "react-component",
    "janribka",
    "styles"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JanRibka/janribka",
    "directory": "packages/janribka-system"
  },
  "bugs": {
    "url": "https://github.com/JanRibka/janribka/issues"
  },
  "homepage": "https://github.com/JanRibka/janribka#readme",
  "scripts": {
    "build": "tsup && pnpm build:copy-files",
    "build:development": "pnpm build:clean-build && tsup --sourcemap && pnpm build:copy-files",
    "build:copy-files": "node ../../scripts/copyFiles.mjs",
    "build:clean-build": "rimraf build tsconfig.build.tsbuildinfo",
    "prebuild": "rimraf build",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "release": "pnpm version --no-git && pnpm publish --access public",
    "typescript": "tsc -p tsconfig.json"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.6"
  },
  "peerDependenciesMeta": {},
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "directory": "build"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
