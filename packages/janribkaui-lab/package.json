{
  "name": "@janribkaui/lab",
  "version": "1.0.0-alpha.0",
  "private": false,
  "author": "Jan Ribka",
  "description": "Laboratory for new JanRibka UI modules.",
  "license": "MIT",
  "main": "./src/index.ts",
  "keywords": [
    "react",
    "react-component-library",
    "library",
    "janribkaui",
    "tailwind",
    "material design",
    "lab"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/janribkaui/material-ui-tailwind.git",
    "directory": "packages/janribkaui-lab"
  },
  "bugs": {
    "url": "https://github.com/janribkaui/material-ui-tailwind/issues"
  },
  "homepage": "https://github.com/janribkaui/material-ui-tailwind#readme",
  "scripts": {
    "build": "pnpm build:modern && pnpm build:node && pnpm build:stable && pnpm build:types && pnpm build:copy-files && pnpm build:copy-tailwind-config",
    "build:modern": "node ../../scripts/build.mjs modern",
    "build:node": "node ../../scripts/build.mjs node",
    "build:stable": "node ../../scripts/build.mjs stable",
    "build:types": "node ../../scripts/buildTypes.mjs",
    "build:copy-files": "node ../../scripts/copyFiles.mjs",
    "build:copy-tailwind-config": "node ../../scripts/copyTailwindConfig.mjs",
    "prebuild": "rimraf build tsconfig.build.tsbuildinfo",
    "release": "pnpm build && pnpm publish",
    "test": "cd ../../ && cross-env NODE_ENV=test mocha 'packages/janribkaui-lab/**/*.test.{js,ts,tsx}'",
    "typescript": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.6",
    "@janribka/system": "workspace:^",
    "@janribka/types": "workspace:^",
    "@janribka/utils": "workspace:^",
    "csstype": "^3.1.3",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@janribka/internal-babel-macros": "workspace:^",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-transition-group": "^4.4.10",
    "react": "19.0.0-rc-f6cce072-20240723",
    "react-dom": "19.0.0-rc-f6cce072-20240723",
    "rimraf": "^6.0.1",
    "styled-components": "^6.1.13",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@types/react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@emotion/react": {
      "optional": true
    },
    "@emotion/styled": {
      "optional": true
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "directory": "build"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
