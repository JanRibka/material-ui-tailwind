{
  "name": "@janribka/utils",
  "version": "0.0.0",
  "private": false,
  "author": "Jan Ribka",
  "description": "Utility functions for react components",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.ts",
  "keywords": [
    "react",
    "react-components",
    "janribka",
    "utils"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JanRibka/janribka",
    "directory": "packages/janribka-utils"
  },
  "bugs": {
    "url": "https://github.com/JanRibka/janribka/issues"
  },
  "homepage": "Private package",
  "scripts": {
    "dev": "tsup --watch --sourcemap",
    "build": "tsup && pnpm build:copy-files",
    "build:copy-files": "node ../../scripts/copyFiles.mjs",
    "prebuild": "rimraf build",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "release": "pnpm build && pnpm version --no-git && pnpm publish --access public",
    "typescript": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-is": "18.3.1"
  },
  "devDependencies": {
    "@janribka/internal-babel-macros": "workspace:^",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-is": "^18.3.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.4.0",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "directory": "build"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
